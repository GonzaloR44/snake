Public Sub DrawingArea1_KeyPress()
   If serpiente <> Null Then
      Dim k As String = UCase$(Key.Text)
      If k = "W" Or k = "A" Or k = "S" Or k = "D" Then
         serpiente.cambiarDir(k)
      Endif 
      
   Endif
End

