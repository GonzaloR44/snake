Private decorar As Float

Public Sub Timer1_Timer()
  DrawingArea1.Refresh()

   If Button1.Text = "Pausar" Then
     DibujarJuego()
  iPasos = iPasos + 1
  If iPasos = 10 Then 
     serpiente.crecer()
     iPasos = 1
     serpiente.estasMuerta(DrawingArea1.Width, DrawingArea1.Height)
   Endif
    
   Else 
     DibujarPausa()
  
  Endif 

End

